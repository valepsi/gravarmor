<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.fr.epsi.gravarmor.controller.WindowController">
    <MenuBar fx:id="menuBar">
        <Menu text="Game">
            <MenuItem onAction="#handleMenuActionNewGame" text="New Game" />
            <MenuItem onAction="#handleMenuActionQuit" text="Quit" />
        </Menu>
    </MenuBar>
    <BorderPane>
        <center>
            <ScrollPane fx:id="landPane" BorderPane.alignment="CENTER" />
        </center>
        <right>
            <Pane prefWidth="200.0" BorderPane.alignment="CENTER" />
        </right>
    </BorderPane>
    <stylesheets>
        <URL value="@windowView.css" />
    </stylesheets>
</VBox>
